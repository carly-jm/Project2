<div class = "memberscontainer">
<!-- Navbar -->
<div class="w3-top">
 <div class="w3-bar w3-theme-d2 w3-left-align w3-large nav-bar">
  
  <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-theme-d2" href="javascript:void(0);" onclick="openNav()"><i class="fa fa-bars"></i></a>
  <a class="navbar-brand" href="#" id="logo"><img src="../img/CompanionsLogoFinal.png"  alt="logo" height="40px" class="responsive"></a>
  <a href="/post" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" title="Add"><img src="../img/addButtonIcon.png"  alt="logo" height="40px" class="responsive"></a>
  <div class="w3-dropdown-hover w3-hide-small">
    
    <a href="#" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white" title="Search"><img src="../img/searchButtonIcon.png"  alt="Search" height="40px" class="responsive"></a>     
    <div class="w3-dropdown-content w3-card-4 w3-bar-block" id="searchBox" style="width:300px">
      
      <label class="search__label" for="search">Search for a buddy! Enter their username:</label>
      <input type="text" name="search" id="search" placeholder="Enter username" class="form__input" />
      <button type="submit" class="form__button" id="search-btn">Search</button>
      
    </div>
  </div>
  
  <div class="w3-dropdown-hover w3-hide-small w3-right">
    
    <a href="#" class="w3-bar-item w3-button w3-hide-small w3-right w3-padding-large w3-hover-white" id="profile" title="My Account">
      <img src="../img/catface.png" class="w3-circle" id="mini-profile" style="height:23px;width:23px" alt="Avatar">
    </a>
      <div class="w3-dropdown-content w3-card-4 w3-bar-block" style="width:300px; right: 0; margin-top: 50px">
        
        <a href="/logout" class="w3-bar-item w3-button">Logout</a>

      </div>
  </div>
 </div>
<!-- End Navbar -->
</div>

<!-- Navbar on small screens -->
<div id="navDemo" class="w3-bar-block w3-theme-d2 w3-hide w3-hide-large w3-hide-medium w3-large w3-right nav-bar">
  
  <a href="/logout" class="w3-bar-item w3-button w3-padding-large" style="text-align: center;">Logout</a>
  <a href="/post" class="w3-bar-item w3-button w3-padding-large" style="text-align: center;">Post</a>
  <div class="w3-bar-item w3-padding-large w3-dropdown-hover w3-hide-large w3-hide-medium" style="background-color: #4d636f !important; margin-bottom: -10px;">
    
    <a href="#" class="w3-padding-large">Search</a>     
    <div class="w3-dropdown-content w3-card-4 w3-bar-block" id="small-searchBox" style="width:300px; margin-top: 10px; right: 0;">
      
      <label class="search__label" for="search">Search for a buddy! Enter their username:</label>
      <input type="text" name="small-search" id="small-search" placeholder="Enter username" class="form__input" />
      <button type="submit" class="form__button" id="small-search-btn">Search</button>
      
    </div>
  </div>
<!-- End Navbar on small screens -->
</div>

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:110px">    
  <!-- Row One -->
  <div class="w3-row">
    <div class="w3-col m12">
      <!-- Profile -->
      <div class="w3-card w3-round w3-white">
        <div class="w3-container edit-button ">

          <button class="w3-button w3-right" id="editProfile" data-id="{{user.userId}}"><i class="fa fa-pencil fa-fw w3-text-theme"></i></button>
        
        </div>
        <div class="w3-container w3-clear">
         
          <h4 class="w3-center">{{user.username}}</h4>
            <div class="w3-center w3-clear profile">
              {{#if user.profileImage}}

                <p class="w3-center w3-clear"><img src="../{{user.profileImage}}" class="w3-circle" id="profile-pic" style="height:106px;width:106px" alt="Avatar"></p>
              {{else}}
                <p class="w3-center w3-clear"><img src="../img/catface.png" class="w3-circle" style="height:106px;width:106px" alt="Avatar"></p>
              {{/if}}
            </div>
          <hr>
            <div class="w3-container edit-button">
            
              <button class="w3-button w3-right" id="editDetails" data-id="{{user.userId}}"><i class="fa fa-pencil fa-fw w3-text-theme"></i></button>
          
            </div>
          {{#if user.favorites}}
            <p><i class="fa fa-heart fa-fw w3-clear w3-margin-right w3-text-theme"></i> {{user.favorites}}</p>
          {{else}} 
            <p><i class="fa fa-heart fa-fw w3-margin-right w3-text-theme"></i>Cuddling, sleeping, eating</p>
          {{/if}}
          
          {{#if user.location}}
            <p><i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i> {{user.location}}</p>
          {{else}}
            <p><i class="fa fa-home fa-fw w3-margin-right w3-text-theme"></i>Home is where people feed me</p>
          {{/if}}
          
          {{#if user.birthday}}
            <p><i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i> {{user.birthday}}</p>
          {{else}}
            <p><i class="fa fa-birthday-cake fa-fw w3-margin-right w3-text-theme"></i> Everyday is a good day to celebrate me!</p>
          {{/if}}
        </div>
      </div>
      <br>
      <br>
    <!-- End Profile -->
    </div>
  <!--End Row One -->
  </div>


   
  <!-- Row Two -->
  <div class="w3-row wrap">
    <!-- Post Gallery -->
    {{#each user.posts}}
    <div class="w3-col">
        
      <div class="w3-container w3-card w3-white w3-round w3-margin"><br>
         <button class="w3-button w3-clear delete-post" data-post="{{dataValues.id}}" data-creator="{{dataValues.UserId}}"><i class="fa fa-times fa-fw w3-text-theme" style="margin-left= 20px;"></i></button>
         <button class="w3-button edit-post" data-post="{{dataValues.id}}" data-creator="{{dataValues.UserId}}"><i class="fa fa-pencil fa-fw w3-text-theme" style="margin= 0;"></i></button>
        <br>
          <div class="w3-row-padding caption-box" data-post="{{dataValues.id}}" data-display="false" style="margin:0 -16px; display: none;">
            
            <textarea class="caption-text" data-post="{{dataValues.id}}"></textarea>
            <button type="submit" class="add-caption" data-post="{{dataValues.id}}">Save</button>
          
          </div>
        <span class="w3-right w3-clear w3-opacity created-at"></span>
        <br><br>
        <p id="postCaption">{{dataValues.caption}}</p>
        <hr class="w3-clear">
        
          <div class="w3-row-padding" style="margin:0 -16px">
              <img src="../{{dataValues.name}}" style="width:100%; object-fit: cover;" class="w3-margin-bottom">
          </div>
        
        <p><i class="fa fa-paw"></i> &nbsp; {{dataValues.Likes.length}}</p>
        <button type="button" class="w3-button w3-theme-d1 w3-margin-bottom like-btn" data-id="{{dataValues.id}}" data-like="false"><i class="fa fa-thumbs-up"></i>  Like</button> 
        <button type="button" class="w3-button w3-theme-d2 w3-margin-bottom comment-btn" data-id="{{dataValues.id}}"><i class="fa fa-comment"></i>  Comment</button> 
        <br>
        <h5>Comments:</h5>
        {{#each dataValues.Comments}}
        <div class="w3-row-padding comment" data-id="{{dataValues.id}}" style="margin:0 -15px">
            
            <h5 class="commenter">{{dataValues.commenter}}</h5>
            <p class="comments">{{dataValues.content}}</p>

        </div>
        {{/each}}
        <div class="w3-row-padding comment-box" data-id="{{dataValues.id}}" data-display="false" style="margin:0 -16px; display: none;">
          
          <textarea class="comment-text" data-id="{{dataValues.id}}"></textarea>
          <button type="submit" class="add-comment" data-id="{{dataValues.id}}">Add Comment</button>
        
        </div>
      </div>
    </div>


        {{else}}
        <div class="w3-container w3-card w3-white w3-round w3-margin"><br>
        <h4>This user does not have content yet</h4><br>
        </div>
    <!-- End Post Gallery -->
    </div>
  {{/each}}  
  <!-- End Row Two -->
  </div>
  
<!-- End Page Container -->
</div>
<br>



 
<script>

// Used to toggle the menu on smaller screens when clicking on the menu button
function openNav() {
  var x = document.getElementById("navDemo");
  if (x.className.indexOf("w3-show") == -1) {
    x.className += " w3-show";
  } else { 
    x.className = x.className.replace(" w3-show", "");
  }
}
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="../js/comment.js"></script>
<script type="text/javascript" src="../js/like.js"></script>
<script type="text/javascript" src="../js/search.js"></script>
<script type="text/javascript" src="../js/profile.js"></script>
<script type="text/javascript" src="../js/image.js"></script>

